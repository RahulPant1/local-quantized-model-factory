# LQMF Environment Configuration
# Copy this file to .env and fill in your values

# Gemini API Key (optional - enables AI-powered planning assistance)
GEMINI_API_KEY=your_gemini_api_key_here

# Hugging Face Token (optional - for private models or higher rate limits)
HF_TOKEN=your_huggingface_token_here

# Storage Configuration
STORAGE_BACKEND=sqlite  # sqlite or json
MODELS_DIR=models
QUANTIZED_MODELS_DIR=quantized-models
CONFIGS_DIR=configs
LOGS_DIR=logs
MCP_DIR=mcp

# Performance Settings
MAX_RETRIES=3
AUTO_SAVE_PLANS=true
RATE_LIMIT_DELAY=1.0

# Hardware Configuration
GPU_MEMORY_LIMIT=8  # GB
CPU_FALLBACK=true
TORCH_DEVICE=auto  # auto, cuda, cpu